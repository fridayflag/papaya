# The port for the server
# Example: 1234, 4321
# Used by: the server at startup, and/or Docker-compose, when standing up the server
SERVER_PORT=1234

# The secret for the authentication token
# Example: aaaa, bbbb
# Used by: the server at startup to mint the authentication token
AUTH_TOKEN_SECRET = aaaa

# The secret for the refresh token
# Example: aaaa, bbbb
# Used by: the server at startup to mint the refresh token
AUTH_REFRESH_TOKEN = bbbb

# The user for the couchdb admin user
# Used by: 1) the server at startup to initiate the proxy. 2) Docker-compose, when standing up the database (couch db internalizes this on its first startup)
COUCHDB_ADMIN_USER=papaya

# The password for the couchdb admin user
# Used by: 1) the server at startup to initiate the proxy. 2) Docker-compose, when standing up the database (couch db internalizes this on its first startup)
COUCHDB_ADMIN_PASS=admin

# Optional: full CouchDB URL to proxy /db/* to (e.g. http://user:pass@host:5984).
# If unset, the server builds this from COUCHDB_ADMIN_USER, COUCHDB_ADMIN_PASS, COUCHDB_HOST, COUCHDB_PORT.
# COUCH_DB_PROXIED_URL=

# The host for the couchdb instance
# Example: localhost, couchdb.mywebsite.com
# Used by: the server at startup to initiate the proxy.
COUCHDB_HOST=localhost

# The port for the couchdb instance
# Example: 5984, 6984
# Used by: 1) the server at startup to initiate the proxy. 2) Docker-compose, when standing up the database
COUCHDB_PORT=5984
